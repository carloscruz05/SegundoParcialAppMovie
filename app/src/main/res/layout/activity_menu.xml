<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/tu_imagen_fondo">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bienvenido"
        android:textSize="24sp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textViewWelcome"
        android:layout_marginTop="16dp">

        <!-- Sección de Caricaturas -->
        <LinearLayout
            android:id="@+id/sectionCaricatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgCaricatura"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_caricatura"
                android:contentDescription="Caricatura"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caricatura"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Sección de Acción -->
        <LinearLayout
            android:id="@+id/sectionAccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgAccion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_accion"
                android:contentDescription="Acción"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Sección de Terror -->
        <LinearLayout
            android:id="@+id/sectionTerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgTerror"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_terror"
                android:contentDescription="Terror"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terror"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
